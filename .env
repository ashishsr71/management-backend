# Server Configuration
PORT=5000

# Database Connection
# Get this string from your MongoDB Atlas dashboard
MONGO_URI=mongodb+srv://<your_username>:<your_password>@yourcluster.mongodb.net/<your_database_name>?retryWrites=true&w=majority

# JSON Web Token (JWT) Secret
# Use a strong, random string (e.g., from a password generator)
JWT_SECRET=your_super_strong_random_secret_key_here